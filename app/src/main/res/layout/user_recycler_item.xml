<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightLarge">

    <TextView
        android:id="@+id/mobileno_recycler"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="121dp"
        android:gravity="center_vertical"
        android:text="Mobile Number"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/username_recycler"
        android:layout_width="108dp"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="121dp"
        android:layout_toEndOf="@+id/mobileno_recycler"
        android:gravity="center_vertical"
        android:text="Username"
        android:textAlignment="center"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/delete_recycler"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/edit_recycler"
        app:srcCompat="@drawable/ic_baseline_delete_24" />

    <ImageView
        android:id="@+id/edit_recycler"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="deleteUser"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="13dp"
        android:layout_toEndOf="@+id/username_recycler"
        app:srcCompat="@drawable/ic_baseline_edit_24" />


</RelativeLayout>
