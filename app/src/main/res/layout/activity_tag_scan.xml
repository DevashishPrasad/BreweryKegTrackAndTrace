<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TagScan">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/linearlayouttemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">


        <TextView
            android:id="@+id/locationTV"
            android:layout_width="70pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Location"

            android:textColor="@color/purple_700"
            android:textSize="20sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/loadunload"
            android:layout_width="30pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Loading"
            android:textColor="@color/purple_700"
            android:textSize="20sp" />
    </LinearLayout>

    <include
        android:id="@+id/include2"
        layout="@layout/footer"
        tools:layout_editor_absoluteY="610dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Scanned RFID"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearlayouttemp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintBottom_toTopOf="@+id/include2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/purple_700"
            android:gravity="center"
            android:text="K50"
            android:textColor="@color/white"


            android:textStyle="" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/purple_700"
            android:gravity="center"
            android:text="K30"
            android:textColor="@color/white"

             />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/purple_700"
            android:gravity="center"
            android:text="Keg"

            android:textColor="@color/white"
             />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/purple_700"
            android:gravity="center"

            android:text="Keg"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/purple_700"
            android:gravity="center"

            android:text="Keg"
            android:textColor="@color/white"
          />
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.034">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 Lrts" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="30 ltrs" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabempty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Empty" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabCO2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="CO2" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabDispenser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Dispenser" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPaperVP"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>